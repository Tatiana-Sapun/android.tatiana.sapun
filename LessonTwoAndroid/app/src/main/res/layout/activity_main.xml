<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="top"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/resultField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/operationField"/>
    <!-- поле знака операции -->
    <TextView
        android:id="@+id/operationField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/resultField"
        />
    <!-- поле ввода чисел -->
    <EditText
        android:id="@+id/numberField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        app:layout_constraintTop_toBottomOf="@+id/resultField"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <LinearLayout
        android:id="@+id/firstButtonPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="start">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/one"
            style="@style/ButtonStyle"
            android:text="@string/button_1"
            android:onClick="onNumberClick" />
        <com.google.android.material.button.MaterialButton

        android:id="@+id/two"
            style="@style/ButtonStyle"
            android:text="@string/button_2"
            android:onClick="onNumberClick"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/three"
            style="@style/ButtonStyle"
            android:text="@string/button_3"
            android:onClick="onNumberClick"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/addition"
            style="@style/ButtonStyle"
            android:text="@string/button_addition"
            android:onClick="onOperationClick"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondButtonPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="start">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/four"
            style="@style/ButtonStyle"
            android:text="@string/button_4"
            android:onClick="onNumberClick"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/five"
            style="@style/ButtonStyle"
            android:text="@string/button_5"
            android:onClick="onNumberClick"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/six"
            style="@style/ButtonStyle"
            android:text="@string/button_6"
            android:onClick="onNumberClick"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/subtraction"
            style="@style/ButtonStyle"
            android:text="@string/button_subtraction"
            android:onClick="onOperationClick"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/thirdButtonPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="start">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/seven"
            style="@style/ButtonStyle"
            android:text="@string/button_7"
            android:onClick="onNumberClick"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/eight"
            style="@style/ButtonStyle"
            android:text="@string/button_8"
            android:onClick="onNumberClick"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/nine"
            style="@style/ButtonStyle"
            android:text="@string/button_9"
            android:onClick="onNumberClick"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/multiply"
            style="@style/ButtonStyle"
            android:text="@string/button_multiply"
            android:onClick="onOperationClick"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/forthButtonPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="start">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/clear"
            style="@style/ButtonStyle"
            android:text="@string/button_clear"
            android:onClick="onOperationClick"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/zero"
            style="@style/ButtonStyle"
            android:text="@string/button_0"
            android:onClick="onNumberClick"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/equals"
            style="@style/ButtonStyle"
            android:text="@string/button_equals"
            android:onClick="onOperationClick"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/division"
            style="@style/ButtonStyle"
            android:text="@string/button_division"
            android:onClick="onOperationClick"/>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_settings" />

</LinearLayout>